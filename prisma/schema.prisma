// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
STUDENT
MONITOR
PRECEPTOR
DIRECTOR
ADMINISTRADOR
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum Gender {
  MALE
  FEMALE
}

enum AttendanceStatus {
  ATTENDING
  FOUL
  JUSTIFIED
}

enum EventStatus {
  ACTIVE
  CANCELLED
  INACTIVE
}

enum WeekDays {
  UNIQUE
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
}

model User {
  id        Int          @id @default(autoincrement())
  name      String
  lastName  String
  email     String       @unique
  role      Role         @default(STUDENT)
  status    UserStatus   @default(INACTIVE)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @default(now())
  profile   Profile?
  attendace Attendance[]
}

model Profile {
  id             Int      @id @default(autoincrement())
  universityId   String
  identification String
  phoneNumber    String?
  nacionality    String
  gender         Gender
  career         String
  room           String
  user           User     @relation(fields: [userId], references: [id])
  userId         Int      @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())
}

model Event {
  id           Int         @id @default(autoincrement())
  title        String
  start        DateTime
  end          DateTime
  status       EventStatus @default(ACTIVE)
  weekDays     WeekDays[]
  scheduleDate DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @default(now())
}

model Attendance {
  id        Int      @id @default(autoincrement())
  userId    Int
  createdBy String
  eventId   String
  timeStamp DateTime @default(now())
  users     User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
